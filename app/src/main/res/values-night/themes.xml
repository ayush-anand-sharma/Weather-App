<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style
        name="SplashApi" parent="Theme.SplashScreen">
        <!-- Background color of the splash screen -->
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <!-- Animated icon displayed on the splash screen -->
        <item name="windowSplashScreenAnimatedIcon">@raw/sun</item>
        <!-- Theme to apply after the splash screen finishes -->
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.DayNight.NoActionBar</item>
    </style>
</resources>